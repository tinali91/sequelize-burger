<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Eat da burger!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Eat these burgers!</h2>
      <ul class="listOne">
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour btn btn-secondary px-2" data-id="{{this.id}}" data-devoured="{{devoured}}">
            Devour it!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">You already ate these.</h2>
      <ul class="listTwo">
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add a burger</h5>

          <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger name:</label>
              <input type="textarea" id="burger" name="burger_name">
            </div>

            <button class="btn btn-secondary" type="submit">Submit</button>
          </form>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>